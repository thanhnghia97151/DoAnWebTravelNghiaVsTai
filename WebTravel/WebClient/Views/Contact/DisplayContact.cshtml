@{
    var abouts = (List<About>)ViewBag.abouts;
}

<div class="category1">
    <div class="container">

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 ">
                <div class="containercategory1">
                    <h3><span class="fa fa-user"></span> &nbsp;&nbsp;<span>Du lịch</span> <a href="">NƯỚC NGOÀI</a></h3>
                </div>
            </div> <!-- end left 1 cate -->
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                <div class="containercategory1">
                    <h3><span class="fa fa-user"></span>&nbsp;&nbsp;<span>Du lịch</span> <a href="">TRONG NƯỚC</a></h3>
                </div>

            </div> <!-- end left 2 cate -->
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                <div class="containercategory1">
                    <h3><span class="fa fa-user"></span>&nbsp;&nbsp;<span>Du lịch</span> <a href="">GIA ĐÌNH</a></h3>
                </div>
            </div> <!-- end left 3 cate -->
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 ">
