
@{
    Layout = null;
    var session = HttpContextAccessor.HttpContext.Session;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title> Example </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript" src="~/vendor/bootstrap.js"></script>
    <script type="text/javascript" src="~/js/1.js"></script>
    <link rel="stylesheet" href="~/vendor/bootstrap.css">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/changepassword.css">
    <link rel="stylesheet" href="~/css/confirmaccount.css">
    <link rel="stylesheet" href="~/vendor/font-awesome.css">
    <link href="http://fonts.cdnfonts.com/css/helvetica-neue-9" rel="stylesheet">
    <link href="https://pagecdn.io/lib/easyfonts/fonts.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-push-2 col-md-6 col-md-push-3 col-lg-6 col-lg-push-3 khungxacnhan">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 titlexacnhan text-center">
                        <p>XÁC NHẬN THÔNG TIN</p>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sdtxacnhan text-center">
                        <p>
                            Bạn hãy lấy mã thông từ số điện thoại
                            (<b class="mausdt">*******</b>@session.GetString("PHONE").Substring(session.GetString("PHONE").Length-3))
                        </p>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                        <form asp-controller="Auth" asp-action="DisplayConfirmCode" method="post">
                            <div class="form-group">
                                <label for="">Nhập mã:</label>
                                <input type="text" name="code" class="nhapma">
                                <button type="submit" class="guilaima">Gửi lại mã</button>
                                <small style="color: red; font-size:13px">@ViewBag.ErrorCodeOTP</small>
                            </div>
                            <button type="submit" class="btn btn-success gui">Gửi</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
