@model TourModelSearch

@{
    TypeOfTour typeOfTour = ViewBag.typeoftour;
    List<TourCategoryModel> listTourCate = ViewBag.tourcategories;
    List<TourCategoryModel> listFullTourCateVsTour = ViewBag.tourcateparent;
}
<!-- Thong tin goi nho -->
<div class="goinho">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="thongtin">
                    <small>Trang Chủ > Khách Sạn</small>
                </div>
            </div>
        </div>
    </div>
</div> <!-- the end goi nho -->
<!-- Tìm kiếm du lịch trong nước -->
<div class="KhungTimKiem">

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg12">
                <div class="TitleTimKiem text-center">
                    <p>TÌM TOUR </p>
                </div>
                <form action="/tour/search" method="post">
                    <input type="hidden" asp-for="PriceStart"/>
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                        <div class="form-group">
                            <select asp-for="Address" class="form-control chinhtimkiem" id="noidi">
                                <option value="Hà Nội"> Hà Nội</option>
                                <option value="Hồ Chí Minh"> Hồ Chí Minh</option>
                                <option value="Mỹ"> Mỹ</option>
                                <option value="Anh"> Anh</option>
                                <option value="Pháp"> Pháp</option>
                                <option value="Nhật"> Nhật</option>
                                <option value="Hàn"> Hàn</option>ca
                            </select>
                        </div>
                    </div>
                    @*<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                        <div class="form-group">
                            <select class="form-control chinhtimkiem" id="noiden">
                                <option value="my"> Mỹ</option>
                                <option value="anh"> Anh</option>
                                <option value="phap"> Pháp</option>
                                <option value="nhat"> Nhật</option>
                                <option value="han"> Hàn</option>
                            </select>
                        </div>
                    </div>*@
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                        <div class="form-group">
                            <select asp-for="PriceEnd" class="form-control chinhtimkiem" id="gia">
                                <option value="2000000"> Dưới 2 triệu</option>
                                <option value="4000000"> Từ 2-4 triệu</option>
                                <option value="6000000"> Từ 4-6 triệu</option>
                                <option value="8000000"> Từ 6-8 triệu</option>
                                <option value="9000000"> Trên 8 triệu</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                        <input type="submit" value="TÌM KIẾM" class="btn btn-dark timkiem">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- The end Tìm kiếm du lịch trong nước -->
<!-- Thong tin khach san -->
<div class="motakhachsan">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h2>DU LỊCH @typeOfTour.Type.ToUpper()</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <p class="danhgia">Đánh giá:</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <p class="tinkhachsan">
                    @*Luxembourg, tên đầy đủ là Đại công quốc Luxembourg, là một quốc gia nhỏ nằm trong lục địa ở Tây Âu, giáp với Bỉ, Pháp, và Đức. Luxembourg là một nước theo dân chủ đại nghị và quân chủ lập hiến, được cai trị bởi một đại công tước và là đại công quốc duy nhất còn tồn tại trên thế giơi. Du lịch đến Luxembourg, du khách sẽ được thưởng lãm những thắng cảnh cổ xưa vô cùng thú vị và đầy quyến rũ như: Những khu phố cổ có đường rải sỏi, những pháo đài thời trung cổ trên đỉnh đồi cùng khung cảnh đồi núi tự nhiên, đất nông nghiệp và lưu vực sông.*@
                </p>
            </div>
        </div>

    </div>
</div>

<!-- begin hien thi loai khach hang -->
@if (listFullTourCateVsTour != null)
{
    @foreach (var cate in listFullTourCateVsTour)
    {
        <hr />
        <div class="loaikhachsan1">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
                        <h1 style="text-align:center"> <a href="/tour/tourmodelbytourcategory/@cate.TourCategoriesId">DU LỊCH @cate.Name</a> </h1>
                    </div>
                </div>
            </div>
        </div>
        @foreach (var item in cate.Childrens)
            {
            @if(item.Tours.Count() > 0)
                {
                    <div class="loaikhachsan1">
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
                                    <h2>@item.Name</h2>
                                </div>
                                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
                                    <div class="left">
                                        <a href="/tour/toursbycategory/@item.TourCategoriesId"><span class="fa fa-eye">&nbsp;&nbsp;</span>Xem tất cả</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- the end loaikhachsan1 -->
                    <!--  Demos -->
                    <section>
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="large-10 columns">
                                        <div class="owl-carousel owl-theme">
                                            @foreach (var tour in item.Tours)
                                            {
                                                <div class="item">
                                                    <div class="thumbnail">
                                                        <a href="/home/detailtour/@tour.TourId"><img src="https://localhost:44384/images/@tour.Image" alt=""></a>
                                                        <div class="captionbottomimage">
                                                            @tour.MetaTitle
                                                        </div>
                                                        <div class="caption">
                                                            <div class="review">
                                                                <p>
                                                                    <span class="fa fa-history"></span>
                                                                    &nbsp;Lịch trình: @tour.Schedule
                                                                </p>
                                                            </div>
                                                            <div>
                                                                <p><span class="fa fa-calendar"></span>&nbsp; Khởi hành: @tour.StartDate</p>
                                                            </div>

                                                            <div class="detailItem">
                                                                <b class="pull-right price">Giá: @tour.Price đ</b>
                                                                <p>
                                                                    <span class="fa fa-user book"></span>
                                                                    &nbsp;Vé còn: @tour.Quantity
                                                                </p>
                                                            </div>

                                                        </div>
                                                    </div> <!-- end slide left 2 item 1 -->
                                        </div>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                }
            }
            
    }
}





