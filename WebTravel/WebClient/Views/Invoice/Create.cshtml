                        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 thongtinduoi">
                            <div class="form-group">
                                <input type="text" oninput="enterName();" id="entername" asp-for="FullName" class="form-control" placeholder="Họ và tên">
                                <span style="color:red; font-size:13px" asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 thongtinduoi">
                            <div class="form-group">
                                <input type="text" oninput="enterSdt();" id="entersdt" asp-for="Phone" class="form-control" placeholder="Số điện thoại">
