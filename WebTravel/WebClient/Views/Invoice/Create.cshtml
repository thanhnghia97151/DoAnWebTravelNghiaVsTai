                    <div class="form-group">
                        <input type="text" id="name" name="customername0" class="form-control" placeholder="Họ và tên">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 thongtinduoi">
                    <div class="form-group">
                        <input type="text" id="address" name="customeraddress0" class="form-control" placeholder="Địa chỉ">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 thongtinduoi">
                    <div class="form-group">
                        <input type="text" id="sdt" name="customersdt0" class="form-control" placeholder="Nhập số điện thoại">
                    </div>
                </div>
            </div>
            <div class="row"><br /></div>
            <p id="subjectInfo"></p>
            <div class="khoangcachphuongthucthanhtoan">
