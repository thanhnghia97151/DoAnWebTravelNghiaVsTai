@model InvoiceModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title> Example </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript" src="~/vendor/bootstrap.js"></script>
    <script type="text/javascript" src="~/js/1.js"></script>
    <link rel="stylesheet" href="~/vendor/bootstrap.css">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/changepassword.css">
    <link rel="stylesheet" href="~/css/confirmaccount.css">
    <link rel="stylesheet" href="~/vendor/font-awesome.css">
    <link href="http://fonts.cdnfonts.com/css/helvetica-neue-9" rel="stylesheet">
    <link href="https://pagecdn.io/lib/easyfonts/fonts.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-push-2 col-md-6 col-md-push-3 col-lg-6 col-lg-push-3 khungxacnhan">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 titlexacnhan text-center">
                        <p>XÁC NHẬN HỦY ĐƠN HÀNG</p>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sdtxacnhan text-center">
                        <p>
                            Bạn có muốn xóa hóa đơn này không?
                        </p>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                        <form asp-action="DeleteInvoice" method="post">
                            <input type="hidden" asp-for="InvoiceId" />
                            <input type="hidden" asp-for="Quantity" />
                            <input type="hidden" asp-for="TourId" />
                            <div>
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

