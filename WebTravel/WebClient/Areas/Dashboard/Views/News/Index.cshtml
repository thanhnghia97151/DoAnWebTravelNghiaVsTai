@model List<News>
<a class="btn btn-success" asp-action="Create">Create</a>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Meta Title</th>
            <th>Description</th>
            <th>Code</th>
            <th>Image</th>
            <th>Detail</th>
            <th>Note</th>
            <th>NewCategory Id</th>
            <th>Created Date</th>
            <th>Created By</th>
            <th>Modified Date</th>
            <th>Modified By</th>
            <th>Status</th>
            <th>Top hot</th>
            <th>View Count</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NewsId</td>
                <td>@item.Name</td>
                <td>@item.MetaTitle</td>
                <td>@item.Description</td>
                <td>@item.Code</td>
                <td><img src="https://localhost:44384/images/@item.Image" width="70" /></td>
                <td>@Html.Raw(System.Web.HttpUtility.HtmlDecode(item.Detail))</td>
                <td>@item.Note</td>
                <td>@item.NewCategoryId</td>
                <td>@item.CreatedDate</td>
                <td>@item.CreatedBy</td>
                <td>@item.ModifiedDate</td>
                <td>@item.ModifiedBy</td>
                <td>@item.Status</td>
                <td>@item.TopHot</td>
                <td>@item.ViewCount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NewsId"><i class="fa fa-edit"></i></a>
                </td>
                <td>
                    <a href="/dashboard/news/confirmdelete/@item.NewsId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>