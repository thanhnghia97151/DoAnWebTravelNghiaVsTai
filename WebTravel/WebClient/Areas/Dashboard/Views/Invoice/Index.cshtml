@model List<InvoiceModel>
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
@{
    InvoiceModel temp = new InvoiceModel();
}
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Tour Name</th>
            <th>Date Book</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Payment</th>
            <th>Customer</th>
            <th>Phone</th>
            <th>Email</th>

            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
                 @foreach (InvoiceModel item in Model)
            {
                <tr>
                    <td>@item.Tour.Name</td>
                    <td>@item.IncoiceDate</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Payment</td>
                    <td>@item.FullName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>

                    <td>
                        <!-- Trigger the modal with a button -->
                    
                        <button id="c" onclick="remove('@item.InvoiceId.ToString()')" class="btn btn-danger">Delete</button>
                        @*<a id="remove"><i class="fa fa-trash"></i></a>*@
                    </td>
                </tr>
            }
        }
       
    </tbody>
</table>


