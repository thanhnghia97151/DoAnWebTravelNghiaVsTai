@model WebClient.Models.TourCategory

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>TourCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SeoTitle" class="control-label"></label>
                <input asp-for="SeoTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MetaTitle" class="control-label"></label>
                <input asp-for="MetaTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <input asp-for="ParentId" class="form-control" />
            </div>
            <div class="form-group">
                
                <input type="hidden" value="@DateTime.Now" asp-for="CreateDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" value="@DateTime.Now" asp-for="ModifiedDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ModifiedBy" class="control-label"></label>
                <input asp-for="ModifiedBy" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TypeOfTourId" class="control-label"></label>
                <select asp-for="TypeOfTourId" asp-items="@ViewBag.typeoftours" class="form-control">
                    <option value="">-- Choose Type Of Tour ---</option>
                </select>
                @*<input asp-for="TypeOfTourId" class="form-control" />*@
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ShowOnHome" /> @Html.DisplayNameFor(model => model.ShowOnHome)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn alert-secondary" />
            </div>
        </form>
    </div>
</div>

