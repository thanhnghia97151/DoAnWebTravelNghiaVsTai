@model List<Tour>
<a class="btn btn-success" asp-action="Create">Create</a>
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>

            <th>Name</th>
            <th>Meta Title</th>
            <th>Code</th>
            <th>Image</th>
            <th>Schedule</th>
            <th>Price</th>
            <th>Promotion Price</th>
            <th>Quantity</th>
            <th>Departure Date</th>
            <th>Start Place</th>
            <th>End Place</th>
            <th>Transport</th>

            <th>Note</th>
            <th>Category Id</th>
            <th>ScheduleId</th>
            <th>Created Date </th>
            <th>Created By</th>
            <th>Modified Date</th>
            <th>Modified By</th>
            <th>Status</th>
            <th>TopHot</th>
            <th>ViewCount</th>
            <th>Edit</th>
            <th>Delete</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
       {
           <tr>

                <td>@item.Name</td>
                <td>@item.MetaTitle</td>
                <td>@item.Code</td>
                <td><img src="https://localhost:44384/images/@item.Image" width="70" /></td>
                <td>@item.Schedule</td>
                <td>@item.Price</td>
                <td>@item.PromotionPrice</td>
                <td>@item.Quantity</td>
                <td>@item.DepartureDat</td>
                <td>@item.StartPlace</td>
                <td>@item.EndPlace</td>
                <td>@item.Transport</td>

                <td>@item.Note</td>
                <td>@item.CategoryId</td>
                <td>@item.ScheduleId</td>
                <td>@item.CreatedDate</td>
                <td>@item.CreatedBy</td>
                <td>@item.ModifiedDate</td>
                <td>@item.ModifiedBy</td>
                <td>@item.Status</td>
                <td>@item.TopHot</td>
                <td>@item.ViewCount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TourId"><i class="fa fa-edit"></i></a>
                </td>
                <td>
                    <a href="/dashboard/news/confirmdelete/@item.TourId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
           
       }
    </tbody>
</table>
<script src="~/js/jquery.dataTables.min.js"></script>
<script>
    $('.table').DataTable();
</script>